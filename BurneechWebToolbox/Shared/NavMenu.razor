                <span class="oi oi-pencil" aria-hidden="true"></span> Editors
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="media">
                <span class="oi oi-image" aria-hidden="true"></span> Media
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="colors">
                <span class="oi oi-brush" aria-hidden="true"></span> Colors
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="text">
                <span class="oi oi-book" aria-hidden="true"></span> Text
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fonts">
                <span class="oi oi-text" aria-hidden="true"></span> Fonts
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
